<Window x:Name="OakBot" x:Class="OakBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OakBot"
        mc:Ignorable="d"
        Title="OakBot" Height="450" Width="850" WindowStartupLocation="CenterOwner" Background="{x:Null}" SizeToContent="Height" MinWidth="850" MaxWidth="850" MinHeight="400" MaxHeight="800" Foreground="{x:Null}">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="OakBot Running"/>
    </Window.TaskbarItemInfo>
    <Grid Background="Black">
        <TabControl x:Name="tabControl" BorderThickness="2" Padding="2" SelectedIndex="0" Margin="4">
            <TabItem x:Name="TabSettings" Header="Settings">
                <Grid Background="#FF363636" Margin="0">
                    <GroupBox x:Name="GroupTwitchLogin" Header="Twitch Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="109" Width="806" BorderBrush="Black">
                        <Grid Margin="0">
                            <Label x:Name="LabelStreamerAccount" Content="Streamer Account" HorizontalAlignment="Left" Margin="1,1,0,0" VerticalAlignment="Top"/>
                            <Label x:Name="LabelBotAccount" Content="Bot Account" HorizontalAlignment="Left" Margin="1,0,0,1" VerticalAlignment="Bottom"/>
                            <TextBox x:Name="textBoxStreamerName" HorizontalAlignment="Left" Margin="110,6,0,0" TextWrapping="Wrap" Width="170" IsEnabled="False" ToolTip="Name of the streamer Twitch account." Height="30" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBoxBotName" HorizontalAlignment="Left" Margin="110,0,0,5" TextWrapping="Wrap" Width="170" IsEnabled="False" ToolTip="Name of the bot Twitch account." Height="30" VerticalAlignment="Bottom"/>
                            <Button x:Name="buttonStreamerConnect" Content="" HorizontalAlignment="Left" Height="32" Margin="290,5,0,0" VerticalAlignment="Top" Width="170" BorderBrush="{x:Null}" BorderThickness="0" Foreground="{x:Null}" ToolTip="Connect the streamer account with Twitch." Click="buttonStreamerConnect_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="images/Twitch_connect_button.png"/>
                                </Button.Background>
                            </Button>
                            <Button x:Name="buttonBotConnect" Content="" HorizontalAlignment="Left" Height="32" Margin="290,0,0,5" VerticalAlignment="Bottom" Width="170" BorderThickness="0" BorderBrush="{x:Null}" Foreground="{x:Null}" ToolTip="Connect the bot account with Twitch." Click="buttonBotConnect_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="images/Twitch_connect_button.png"/>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="741,351,0,0" VerticalAlignment="Top" Width="75" Click="btnImport_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Twitch Dashboard"/>
            <TabItem x:Name="TabConsole" Header="Twitch Chat" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="673*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="148*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ComboBox x:Name="SpeakAs" HorizontalAlignment="Left" Margin="4,4,0,4" Grid.Row="2" Width="80" VerticalContentAlignment="Center" FontWeight="Bold" IsReadOnly="True" SelectedIndex="0" ToolTip="Select through which account you speak." TabIndex="1" IsTextSearchEnabled="False" SelectionChanged="SpeakAs_SelectionChanged" IsSynchronizedWithCurrentItem="True" FontFamily="Titillium">
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        </ComboBox.Resources>
                        <ComboBoxItem Content="Streamer"/>
                        <ComboBoxItem Content="Bot"/>
                    </ComboBox>
                    <TextBox x:Name="ChatSend" Height="22" Margin="88,4,4,4" Grid.Row="2" TextWrapping="Wrap" Grid.ColumnSpan="3" FontWeight="Normal" KeyDown="ChatSend_KeyDown" SpellCheck.IsEnabled="True" MaxLength="255" MaxLines="1"/>
                    <GridSplitter x:Name="gridSplitter" Grid.Column="1" Margin="0,4" Width="5" Grid.Row="1" HorizontalAlignment="Left"/>
                    <ListView x:Name="listViewChat" Margin="4" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" MouseDoubleClick="listViewChat_MouseDoubleClick">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="50" Header="Time" DisplayMemberBinding="{Binding shortTime}"/>
                                <GridViewColumn Width="100" Header="Author" DisplayMemberBinding="{Binding author}"/>
                                <GridViewColumn Width="350" Header="Message" DisplayMemberBinding="{Binding message}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="listViewViewers" Grid.Column="2" Margin="4" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Single">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="100" Header="Viewer" DisplayMemberBinding="{Binding displayName}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
